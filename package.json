{
  "name": "electron-vue",
  "version": "0.0.1",
  "main": "dist/main/_.js",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently -n=h5,electron -c=green,blue \"npm run dev:h5\" \"npm run dev:electron\"",
    "dev:h5": "vite",
    "dev:electron": "node script/build --env=development --watch",
    "build:h5": "vite build",
    "build:electron": "node script/build --env=production",
    "build": "rm -rf dist && npm run build:h5 && npm run build:electron && electron-builder"
  },
  "build": {
    "appId": "demo.electron",
    "files": [
      "!node_modules",
      "dist/**"
    ],
    "mac": {
      "artifactName": "${productName}_setup_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_setup_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@vue/compiler-sfc": "^3.0.0",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "electron": "9.1.0",
    "electron-builder": "^22.8.0",
    "electron-connect": "^0.6.3",
    "electron-is-dev": "^1.2.0",
    "electron-store": "^6.0.0",
    "minimist": "^1.2.5",
    "ora": "^5.0.0",
    "rollup-plugin-esbuild": "^2.4.2",
    "typescript": "^4.0.3",
    "vite": "^1.0.0-rc.4",
    "wait-on": "^5.2.0"
  },
  "keywords": [
    "vite",
    "electron",
    "vue3",
    "rollup"
  ]
}
